/**app.wxss**/

page, view {
  box-sizing: border-box;
}

page {
  width: 100%;
  height: 100%;
}

button::after {
  /* border: none; */
  content: none;
  display: none !important;
}

button {
  background-color: #fff;
  border-radius: 0;
  margin: 0;
  padding: 0 !important;
}

button:not([size='mini']) {
  min-height: 40px;
  width: 184px;
  margin-left: 0!important;
  margin-right: 0!important;
}
