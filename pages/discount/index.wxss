/* pages/discount/index.wxss */

.warp {
  width: 100%;
  height: 100vh;
  padding: 31rpx 42rpx 50rpx;
}

.warp .content {
  width: 100%;
  height: 100%;
  overflow: auto;
}

.warp .content .h1 {
  width: 100%;
  padding-left: 25rpx;
  height: 50rpx;
  font-size: 29rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(42, 48, 60, 1);
  line-height: 50rpx;
  position: relative;
  margin-bottom: 31rpx;
}

.content .empty{
  width: 215rpx;
  height: 223rpx;
  background: url('http://192.168.1.179/mini-order/images/empty.png') no-repeat center/100%;
  margin: 20rpx auto;
}

.warp .content .h1::after {
  content: '';
  width: 6rpx;
  height: 33rpx;
  background: rgba(26, 173, 25, 1);
  border-radius: 3rpx;
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -16.5rpx;
}

.content .availableDiscount {
  width: 100%;
}

.content .availableDiscount .item {
  width: 100%;
  min-height: 102rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 17px 0px rgba(241, 243, 248, 1);
  border-radius: 4px;
  padding: 40rpx 31rpx 29rpx 29rpx;
  display: flex;
  justify-content: space-between;
  position: relative;
  margin-bottom: 30rpx;
}

.availableDiscount .item .selection {
  width: 100%;
  height: 100%;
  box-shadow: 0px 0px r17px 0px rgba(241, 243, 248, 1);
  border-radius: 4rpx;
  border: 2rpx solid rgba(241, 44, 32, 1);
  position: absolute;
  top: 0;
  left: 0;
  display: none;
}

.availableDiscount .item.active .selection {
  display: block;
}

.availableDiscount .selection .icon {
  width: 63rpx;
  height: 63rpx;
  background: url('http://192.168.1.179/mini-order/images/i.png') no-repeat center/100%;
  position: absolute;
  top: 0rpx;
  right: 0rpx;
}

.availableDiscount .item .left {
  width: 350rpx;
}

.availableDiscount .item .left .h2 {
  width: 100%;
  height: 42rpx;
  font-size: 29rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(42, 48, 60, 1);
  line-height: 42rpx;
}

.availableDiscount .item .left .time {
  margin-top: 17rpx;
  width: 100%;
  font-size: 25rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(141, 146, 163, 1);
  line-height: 35rpx;
}

.availableDiscount .item .right {
  width: 150rpx;
}

.availableDiscount .item .right .price {
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  height: 58rpx;
  font-size: 25rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(241, 44, 32, 1);
  line-height: 40rpx;
  margin-top: -10rpx;
}

.availableDiscount .item .right .price text {
  height: 58rpx;
  font-size: 42rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(241, 44, 32, 1);
  line-height: 58rpx;
}

.availableDiscount .item .right .condition {
  width: 100%;
  font-size: 25rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(141, 146, 163, 1);
  line-height: 35rpx;
  text-align: right;
  margin-top: 8rpx;
}

.content .unavailableDiscount {
  width: 100%;
}

