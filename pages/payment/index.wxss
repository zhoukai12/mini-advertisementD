.warp {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 10rpx;
}

.paymentStatus {
  width: 129rpx;
  height: 113rpx;
}

.paymentStatus image {
  display: block;
  width: 100%;
  height: 100%;
}

.money {
  width: 90%;
  height: 50rpx;
  font-size: 75rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(42, 48, 60, 1);
  line-height: 50rpx;
  text-align: center;
  margin-top: 62rpx;
}

.tips {
  margin-top: 108rpx;
  width: 90%;
  height: 42rpx;
  font-size: 29rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(141, 146, 163, 1);
  line-height: 42rpx;
  text-align: center;
}

.payBtn {
  width: 667rpx;
  margin-top: 58rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.payBtn view {
  width: 304rpx;
  height: 167rpx;
  margin-bottom: 20rpx;
}
.payBtn view image{
  width: 100%;
  height: 100%;
  display: block;
}
