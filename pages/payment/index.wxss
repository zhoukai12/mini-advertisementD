.infoMation {
  width: 656rpx;
  margin-top: 63rpx;
}

.infoMation .item {
  width: 100%;
  height: 42rpx;
  display: flex;
  justify-content: space-between;
  margin: 10rpx 0;
}

.infoMation .item .left {
  width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: left;
}

.infoMation .item view {
  height: 42rpx;
  font-size: 29rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(141, 146, 163, 1);
  line-height: 42rpx;
}

.infoMation .item .right {
  width: 320rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: right;
}

.timeOut{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  color: #000;
  text-align: center;
  margin-top: 10rpx;
  font-weight: bold;
}

.maskTips{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.7);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.maskTips image{
  display: block;
  width: 496rpx;
  height: 496rpx;
}
.maskTips .text{
  width: 100%;
  height: 42rpx;
  margin-top: 50rpx;
  color: #FFFFFF;
  font-size: 29rpx;
  text-align: center;
}