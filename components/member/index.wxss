/* components/member/index.wxss */

.member {
  padding: 1rem 1.5rem;
  width: 750rpx;
}
.member .member_card .card{
  background-image:-webkit-linear-gradient(top, rgba(0, 0, 0, 0.35) 0%, transparent);
  background:linear-gradient(180deg, rgba(0, 0, 0, 0.35) 0%, transparent);
  width:100%;
  height: 100%;
  padding-bottom:1rem;
}

.member .member_card {
  width: 100%;
  height: auto;
  background-repeat: no-repeat;
  background-position: 50% center;
  background-size: cover;
  box-shadow: 0px 10rpx 26rpx 0px rgba(156, 165, 159, 0.29);
  border-radius: 8rpx;
}
.member .userInfo{
  text-align: center;
  flex-wrap: wrap;
  line-height: 1.5rem;
  padding:1rem 0;
}
.member .userInfo .head_img {
  width: 60px;
  height: 60px;
  border-radius: 50%;
}
.member .userInfo .nickname {
  color:#FFF;
  font-size:1rem;
  width:100%;
  text-align: center
}

.member  .vip_user_info {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 0.5rem;
}

.member  .vip_user_info .vip_user_info_item {
  width: 33.33%;
  text-align: center;
  line-height: 1.5rem;
}

.member  .vip_user_info .vip_user_info_item .vip_user_info_item_label {
  font-size: 0.7rem;
  color: #8c8c8c;
}
.member  .vip_user_info .vip_user_info_item .vip_user_info_item_value{
  color:#FFF;
}

.openVipBtn{
  width: 300rpx;
  height: 90rpx;
  background: green;
  margin: 20rpx auto 0;
  text-align: center;
  line-height: 90rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
}